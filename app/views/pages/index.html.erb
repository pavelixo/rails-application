<% colors = ["red", "blue", "green", "yellow", "indigo", "purple", "pink"] %>
<div class="mb-5 mt-5 flex justify-center w-full">
  <%= link_to "Publish a post", new_post_path, 
      class:"
      text-gray-900
      hover:text-white
      border
      border-gray-800 
      hover:bg-gray-900 
      font-medium 
      rounded-lg 
      text-sm 
      px-3 
      py-1.5
      text-center 
      me-1 
      mt-2 
      mb-1" 
  %>
</div>
<div class="mt-5 mx-auto p-4 space-y-4">
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
    <% @posts.each do |post| %>
      <%= link_to show_post_path(post), class: 'block' do %>
        <div class="bg-white shadow-md rounded-lg p-4 transition duration-300 ease-in-out hover:bg-gray-100 transform hover:-translate-y-1">
          <h2 class="translate-x-1 text-lg font-semibold mb-2 truncate"><%= post.title %></h2>
          <div class="mb-2 flex items-center rounded-md mx-1 my-1 w-full h-auto">
            <p class="text-gray-700 truncate"><%= post.content %></p>
          </div>
          <div class="flex items-center space-x-0">
            <span class="text-gray-600 ml-2 truncate">
              <span class="inline-block w-2 h-2 bg-<%= colors.sample %>-500 rounded-full"></span>
              <%= post.user.username %>
            </span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<div class="flex justify-center w-full absolute">
  <%= paginate @posts %>
</div>