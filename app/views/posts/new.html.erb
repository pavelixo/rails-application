<div class="flex items-center justify-center h-screen">
  <div class="bg-white p-6 rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold flex justify-center">Create a Post</h1>
    <div class="py-2">
      <%= form_with(model: @post, url: create_post_path, local: true) do |form| %>
      <div class="mb-2">
        <%= form.text_field :title, placeholder: :title, autocomplete: false,            
               class:"
              form-input 
              w-full 
              px-2
              py-1.25
              rounded-md
              shadow-sm 
              border 
              border-gray-300 
              focus:outline-none 
              focus:border-gray-800 
              focus:ring-opacity-50 
              placeholder-gray-400"   
        %>
      </div>
      <div class="mb-2">
        <%= form.text_field :content, placeholder: :content, autocomplete: false,             
              class:"
              form-input 
              w-full 
              px-2
              py-1.25
              rounded-md
              shadow-sm 
              border 
              border-gray-300 
              focus:outline-none 
              focus:border-gray-800 
              focus:ring-opacity-50 
              placeholder-gray-400"   
        %>
      </div>
      <div class="flex justify-center">
        <%= form.submit 'Create',
          class:"
          text-gray-900
          hover:text-white
          border
          border-gray-800 
          hover:bg-gray-900 
          font-medium 
          rounded-lg 
          text-sm 
          px-3 
          py-1.5
          text-center 
          me-1 
          mb-1
          " %>
      </div>
      <% end %>
  </div>
</div>